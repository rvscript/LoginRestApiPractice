<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_list_item_repo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/root_list_item_repo_marginTop"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_list_item_repo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cv_list_item_repo_margin"
        android:padding="@dimen/cv_list_item_repo_padding_5"
        app:cardBackgroundColor="@color/white_smoke"
        app:cardCornerRadius="@dimen/cv_list_item_repo_corner_radius_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/cv_list_item_repo_padding_5">

            <TextView
                android:id="@+id/tv_repo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/cv_list_item_repo_padding_2"
                android:textColor="@color/green"
                android:textSize="@dimen/tv_list_item_repo_text_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_repo_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/cv_list_item_repo_padding_2"
                android:textColor="@color/dark_red" />


            <TextView
                android:id="@+id/tv_repo_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/cv_list_item_repo_padding_2"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/tv_list_item_repo_text_size_14"
                android:textStyle="italic" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>